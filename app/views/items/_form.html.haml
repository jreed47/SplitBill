= form_for(@item) do |f|
  - if @item.errors.any?
    #error_explanation
      %h2
        = pluralize(@item.errors.count, "error")
        prohibited this item from being saved:
      %ul
        - @item.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label "Item Name"
    %br/
    = f.text_field :name

  .field
    = f.label "Price"
    %br/
    = f.text_field :price
  .field
    = f.hidden_field :bill_id
  .actions
    = f.submit


