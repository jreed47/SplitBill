= form_for [@item,@ledger] do |f|
  -if @ledger.errors.any?
    #error_explanation
      %h2= "#{pluralize(@ledger.errors.count, "error")} prohibited this ledger from being saved:"
      %ul
        - @ledger.errors.full_messages.each do |msg|
          %li= msg
  .field
    %b Borrower:
    = f.text_field :user_id
  .field
    %b Amount Borrowed:
    = f.text_field :money_owed
  .field
    %b Amount Paid:
    = f.text_field :money_paid
  .actions
    = f.submit 'Save'
